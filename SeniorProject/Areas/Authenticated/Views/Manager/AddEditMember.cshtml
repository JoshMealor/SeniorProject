@using SeniorProject.Areas.Authenticated.Models.Manager
@model AddEditMember
@{
    
    //Create a variable to store the viewbag action data and concatenate
    string title = ViewBag.Action + "page";
    //Assign the viewdata title used in layout to the variable above
    ViewData["Title"] = title;
}

<form asp-action="AddEditMember" method="post">
    <!--Add all the input and label for elements using asp.net tag helpers-->
    <div class="form-group row">
        <!--This one is readonly-->
        <div class="col-sm-2">
            <label asp-for="MemberID">MemberID</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="MemberID" readonly="true" />
        </div>        
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="MemberRole">MemberRole</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="MemberRole" />
        </div>        
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="ActiveStatus">ActiveStatus</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="ActiveStatus" />
        </div>       
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="FirstName">FirstName</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="FirstName" />
        </div>        
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="LastName">LastName</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="LastName" />
        </div>        
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="City">City</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="City" />
        </div>        
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="State">State</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="State" />
        </div>        
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="UserName">Username</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="UserName" />
        </div>        
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="Email">Email</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Email" />
        </div>        
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="Phone">Phone</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Phone" />
        </div>        
    </div>

   @* <!--Use a hidden Id field so that the primary key can be created on the datbase side-->
    <input type="hidden" asp-for="MemberID"/>*@
    <!--Set the btn text to whatever action edit or add this view is being used for.-->
    <button type="submit">@ViewBag.Action</button>
</form>