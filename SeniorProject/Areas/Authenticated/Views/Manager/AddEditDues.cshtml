@using SeniorProject.Areas.Authenticated.Models.Manager
@model DuesViewModel
@{
    
    //Create a variable to store the viewbag action data and concatenate
    string title = ViewBag.Action + "page";
    //Assign the viewdata title used in layout to the variable above
    ViewData["Title"] = title;
}

<form asp-action="AddEditDues" method="post">
    <!--Add all the input and label for elements using asp.net tag helpers-->
    <div class="form-group row">
        <!--This one is readonly-->
        <div class="col-sm-2">
            <label asp-for="DueID">ID</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="DueID" readonly="true" />
        </div>        
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="AmountDue">Amount Due</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="AmountDue" />
        </div>       
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="DateTimeDue">DateTimeDue</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="DateTimeDue" />
        </div>        
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="AmountPaid">AmountPaid</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="AmountPaid" />
        </div>        
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="DateTimePaid">DateTimePaid</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="DateTimePaid" />
        </div>        
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="PaymentMethod">PaymentMethod</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="PaymentMethod" />
        </div>        
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="MemberID">MemberID</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="MemberID" />
        </div>        
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="MemberActiveStatus">MemberActiveStatus</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="MemberActiveStatus" />
        </div>        
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="MemberFirstName">MemberFirstName</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="MemberFirstName" />
        </div>        
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="MemberLastName">MemberLastName</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="MemberLastName" />
        </div>      
    </div>

   @* <!--Use a hidden Id field so that the primary key can be created on the datbase side-->
    <input type="hidden" asp-for="MemberID"/>*@
    <!--Set the btn text to whatever action edit or add this view is being used for.-->
    <button type="submit">Submit</button>
</form>