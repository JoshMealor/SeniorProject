@using SeniorProject.Areas.Authenticated.Models.BasicMember
@model DonationViewModel
@{
    
    //Create a variable to store the viewbag action data and concatenate
    string title = ViewBag.Action + "page";
    //Assign the viewdata title used in layout to the variable above
    ViewData["Title"] = title;
}

<form asp-action="AddEditDonation" method="post">
    <!--Add all the input and label for elements using asp.net tag helpers-->
    <div>
        <!--This one is readonly-->
        <label asp-for="DonationID">DonationID</label>
        <input asp-for="DonationID" readonly="true"/>
    </div>
    <div>
        <label asp-for="DonationAmmount">DonationAmmount</label>
        <input asp-for="DonationAmmount" />
    </div>
    <div>
        <label asp-for="DonationDate">DonationDate</label>
        <input asp-for="DonationDate" />
    </div>
    <div>
        <label asp-for="DonorNameOrTitle">DonorNameOrTitle</label>
        <input asp-for="DonorNameOrTitle" />
    </div>
    <div>
        <label asp-for="MemberFirstName">MemberCollectedByFirstName</label>
        <input asp-for="MemberFirstName" readonly="true" />
    </div>
    <div>
        <label asp-for="MemberLastName">MemberCollectedByLastName</label>
        <input asp-for="MemberLastName" readonly="true"/>
    </div>
    <div>
        <label asp-for="MemberID">MemberCollectedByID</label>
        <input asp-for="MemberID"/>
    </div>
   

   @* <!--Use a hidden Id field so that the primary key can be created on the datbase side-->
    <input type="hidden" asp-for="MemberID"/>*@
    <!--Set the btn text to whatever action edit or add this view is being used for.-->
    <button type="submit">@ViewBag.Action</button>
</form>