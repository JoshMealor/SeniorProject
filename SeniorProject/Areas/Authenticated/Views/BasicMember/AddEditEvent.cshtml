@using SeniorProject.Models.DataLayer.TableModels
@model Event
@{
    
    //Create a variable to store the viewbag action data and concatenate
    string title = ViewBag.Action + "page";
    //Assign the viewdata title used in layout to the variable above
    ViewData["Title"] = title;
}

<form asp-action="AddEditEvent" method="post">
    <!--Add all the input and label for elements using asp.net tag helpers-->
    <div class="form-group row">
        <!--This one is readonly-->
        <div classclass="col-sm-2">
            <label asp-for="EventID">EventID</label>
        </div>
        
        <input asp-for="EventID" readonly="true"/>
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="EventName">EventName</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="EventName" />
        </div>        
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="EventDescription">EventDescription</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="EventDescription" />
        </div>        
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="StartDateTime">StartDateTime</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="StartDateTime" />
        </div>        
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="EndDateTime">EndDateTime</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="EndDateTime" />
        </div>        
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="EventLocation">EventLocation</label>
        </div>
        <div class="col-sm-4">
            <input asp-for="EventLocation" />
        </div>        
    </div>
   

   @* <!--Use a hidden Id field so that the primary key can be created on the datbase side-->
    <input type="hidden" asp-for="MemberID"/>*@
    <!--Set the btn text to whatever action edit or add this view is being used for.-->
    <button type="submit">@ViewBag.Action</button>
</form>